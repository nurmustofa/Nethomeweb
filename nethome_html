<!-- JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

<script>
  // Pusat peta sesuai koordinat yang diminta
  var map = L.map('map').setView([-6.957583, 108.999417], 14);

  // Tambahkan layer peta OSM
  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    maxZoom: 19
  }).addTo(map);

  // Data node
  var nodes = [
    { name: "Server B", lat: -6.957583, lng: 108.999417 },
    { name: "Router A", lat: -6.940306, lng: 108.893194 },
    { name: "Router C", lat: -6.968167, lng: 109.06238 }
  ];
  var markers = [];

  // Tambahkan marker dengan label TX/RX
  nodes.forEach((node) => {
    var label = L.divIcon({
      className: 'traffic-label',
      html: `<b>${node.name}</b><br>TX: 10 Gbps<br>RX: 10 Gbps`
    });
    var marker = L.marker([node.lat, node.lng], { icon: label }).addTo(map);
    markers.push(marker);
  });

  // Update data TX/RX setiap 1 detik
  setInterval(() => {
    markers.forEach((marker, i) => {
      let tx = (Math.random() * 50).toFixed(2);
      let rx = (Math.random() * 100).toFixed(2);
      marker.setIcon(L.divIcon({
        className: 'traffic-label',
        html: `<b>${nodes[i].name}</b><br>TX: ${tx} Gbps<br>RX: ${rx} Gbps`
      }));
    });
  }, 1000);
</script>
